<%= render 'events/navbar' %>
<section class="corBackground_index mt-5">
  <div class="corSlider_index">
  <div class="container">
    <div class="row">
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          </ol>

          <div class="carousel-inner center-block">

            <div class="carousel-item active">
              <%= image_tag 'slide_index1080.jpg', class: 'img_index'%>
            </div>

            <div class="carousel-item">
              <%= image_tag 'slide_index1080.jpg', class: 'img_index'%>
            </div>

            <div class="carousel-item">
              <%= image_tag 'slide_index1080.jpg', class: 'img_index'%>
            </div>

          </div>

          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
      </div>
    </div>
  </div>
  </div>
</section>

<section>
    
    <div class="container">        
        <div class="col text-center">
            <hr class="event__line">
            <h2 class="titles_index">Próximos Eventos</h2>
        </div>

        <div class="row">

            <% @events.order("event_date asc").each do |events| %>

            <div class="col-sm-4 mt-4">
                <div class="col-sm-12 bg-white rounded border shadow">
                    <div class="dataBackground_index rounded mt-3">
                        <h2 class="titles_index"><%= Date.parse(events.event_date).strftime("%d/%m/%Y") %></h2>
                    </div>
                    <p class="text-center mt-2"><strong><%= events.event_name %></p></strong>
                    <p class="text-justify mt-2"><%= events.event_description %></p>
                    <div class="col text-center">
                        <button type="button" class="btn btnEventos_index mb-2"><%= link_to 'Informações', (event_path(events)), class: "form__button" %></button>
                    </div>    
                </div>
            </div>

            <% end %>

        </div>
        <div class="col text-center">
            <button type="button" class="btn btn-light mb-5 mt-5 shadow">Next</button>
        </div>
    </div>
</section>   

